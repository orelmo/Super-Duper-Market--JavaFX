<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<BorderPane prefHeight="500.0" prefWidth="500.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="SDMNewOrderPage.SDMDiscounts.SDMDealsPageController">
   <center>
      <ScrollPane fitToHeight="true" fitToWidth="true">
         <content>
            <FlowPane fx:id="storesDealsFlowPane" hgap="5.0" vgap="5.0" />
         </content>
      </ScrollPane>
   </center>
   <top>
      <Text strokeType="OUTSIDE" strokeWidth="0.0" styleClass="header" text="Hot Deals" BorderPane.alignment="CENTER">
         <font>
            <Font name="System Bold" size="24.0" />
         </font>
      </Text>
   </top>
   <bottom>
      <Button alignment="CENTER" mnemonicParsing="false" onAction="#onApplyDeals" text="Apply" BorderPane.alignment="CENTER">
         <BorderPane.margin>
            <Insets bottom="3.0" top="7.0" />
         </BorderPane.margin>
      </Button>
   </bottom>
   <padding>
      <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
   </padding>
</BorderPane>
